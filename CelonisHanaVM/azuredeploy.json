{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "existingdiagnosticsStorageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the diagnostics storage account"
      }
    },
    "existingdiagnosticsStorageResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource Group of the diagnostics storage account"
      }
    },
    "publicIPAddressType": {
      "type": "string",
      "defaultValue": "Dynamic",
      "allowedValues": [
        "Dynamic",
        "Static"
      ],
      "metadata": {
        "description": "Type of Public Address"
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name of the VM"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS12_v2",
      "allowedValues": [
        "Standard_DS12_v2",
        "Standard_DSS13_v2",
        "Standard_DS14_v2",
        "Standard_E16_v3",
        "Standard_E32_v3",
        "Standard_M64_v3"

      ],
      "metadata": {
        "description": "Size of the VM"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Premium_LRS",
        "Premium_GRS"
      ],
        "metadata": {
          "description": "Data disk Caching mode"
        }
    },
    //"numDataDisks": {
    //  "type": "int",
    //  "defaultValue": 4,
    //  "minValue": 0,
    //  "maxValue": 64,
    //  "metadata": {
    //    "description": "This parameter allows the user to select the number of disks they want"
    //  }
    //},
    //"sizeOfDataDisksInGB": {
    //  "type": "int",
    //  "defaultValue": 100,
    //  "metadata": {
    //    "description": "The size of each disk in GB"
    //  }
    //},
    //"diskcaching": {
    //  "type": "string",
    //  "defaultValue": "None",
    //  "metadata": {
    //    "description": "Data disk Caching mode"
    //  }
    //},
    "imagePublisher": {
      "type": "string",
      "defaultValue": "SUSE",
      "metadata": {
        "description": "Image Publisher"
      }
    },
    "imageOffer": {
      "type": "string",
      "defaultValue": "SLES",
      "metadata": {
        "description": "Image Offer"
      }
    },
    "imageSKU": {
      "type": "string",
      "defaultValue": "12-SP3",
      "allowedValues": [
        "12",
        "12-SP1",
        "12-SP2",
        "12-SP3"
      ],
      "metadata": {
        "description": "Image SKU"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "VM Admin Username"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "VM Password"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "VNET Name"
      }
    },
    "virtualNetworkResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource Group VNET where the virtual network resides"
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the subnet inside the VNET"
      }
    },
    "asgname": {
      "type": "string",
      "defaultValue": "DB_ASG",
      "metadata": {
        "description": "Name of the Application Security Group to bind to the VM Nic"
      }
    }
  },
  "variables": {
    "accountid": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/',parameters('existingdiagnosticsStorageResourceGroup'), '/providers/','Microsoft.Storage/storageAccounts/', parameters('existingdiagnosticsStorageAccountName'))]",
    "vnetID": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('subnetName'))]",
    "asgRef": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/applicationSecurityGroups', parameters('asgName'))]",
    "nicName": "[concat(parameters('vmName'),'_nic')]",
    "publicIPName": "[concat(parameters('vmName'),'_pip')]"

  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('publicIPName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAddressType')]"
      }
    },
    {
      "apiVersion": "2018-04-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nicName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', variables('publicIPName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "[parameters('publicIPAddressType')]",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPName'))]"
              },
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "applicationSecurityGroups": [
                {
                  "id": "[variables('asgRef')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        //"[variables('accountid')]",       
        "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('imagePublisher')]",
            "offer": "[parameters('imageOffer')]",
            "sku": "[parameters('imageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('vmName'),'_OSDisk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[concat(parameters('storageAccountType'))]"
            }
          },
          //"copy": [
          //  {
          //    "name": "dataDisks",
          //    "count": "[parameters('numDataDisks')]",
          //    "input": {
          //      "lun": "[copyIndex('dataDisks')]",
          //      "caching": "[parameters('diskCaching')]",
          //      "managedDisk": {
          //        "storageAccountType": "Standard_LRS"
          //      },
          //      "diskSizeGB": "[parameters('sizeOfDataDisksInGB')]",
          //      "name": "[concat(parameters('vmName'), '-datadisk', copyIndex('dataDisks'))]",
          //      "createOption": "Empty"
          //    }
          //  }
          //]
          "dataDisks": [
            {
              "lun": 0,
              "name": "[concat(parameters('vmName'),'_disk0')]",
              "createOption": "Empty",
              "caching": "None",
              "managedDisk": {
                "storageAccountType": "[concat(parameters('storageAccountType'))]"
                //"id": "[[concat(parameters('vmName'),'_disk1')]]"
              },
              "diskSizeGB": 1024
            },
            {
              "lun": 1,
              "name": "[concat(parameters('vmName'),'_disk1')]",
              "createOption": "Empty",
              "caching": "None",
              "managedDisk": {
                "storageAccountType": "[concat(parameters('storageAccountType'))]"
                //"id": "[[concat(parameters('vmName'),'_disk1')]]"
              },
              "diskSizeGB": 1024
            },
            {
              "lun": 2,
              "name": "[concat(parameters('vmName'),'_disk2')]",
              "createOption": "Empty",
              "caching": "None",
              "managedDisk": {
                "storageAccountType": "[concat(parameters('storageAccountType'))]"
                //"id": "[[concat(parameters('vmName'),'_disk1')]]"
              },
              "diskSizeGB": 512
            },
            {
              "lun": 3,
              "name": "[concat(parameters('vmName'),'_disk3')]",
              "createOption": "Empty",
              "caching": "None",
              "managedDisk": {
                "storageAccountType": "[concat(parameters('storageAccountType'))]"
                //"id": "[[concat(parameters('vmName'),'_disk1')]]"
              },
              "diskSizeGB": 512
            },
            {
              "lun": 4,
              "name": "[concat(parameters('vmName'),'_disk4')]",
              "createOption": "Empty",
              "caching": "ReadOnly",
              "managedDisk": {
                "storageAccountType": "[concat(parameters('storageAccountType'))]"
                //"id": "[[concat(parameters('vmName'),'_disk1')]]"
              },
              "diskSizeGB": 128
            },
            {
              "lun": 5,
              "name": "[concat(parameters('vmName'),'_disk5')]",
              "createOption": "Empty",
              "caching": "None",
              "managedDisk": {
                "storageAccountType": "[concat(parameters('storageAccountType'))]"
                //"id": "[[concat(parameters('vmName'),'_disk1')]]"
              },
              "diskSizeGB": 128
            },
            {
              "lun": 6,
              "name": "[concat(parameters('vmName'),'_disk6')]",
              "createOption": "Empty",
              "caching": "None",
              "managedDisk": {
                "storageAccountType": "[concat(parameters('storageAccountType'))]"
                //"id": "[[concat(parameters('vmName'),'_disk1')]]"
              },
              "diskSizeGB": 128
            },
            {
              "lun": 7,
              "name": "[concat(parameters('vmName'),'_disk7')]",
              "createOption": "Empty",
              "caching": "None",
              "managedDisk": {
                "storageAccountType": "[concat(parameters('storageAccountType'))]"
                //"id": "[[concat(parameters('vmName'),'_disk1')]]"
              },
              "diskSizeGB": 128
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://',parameters('existingdiagnosticsStorageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    }
  ]
}

